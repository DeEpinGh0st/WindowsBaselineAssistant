        <registry>HKEY_LOCAL_MACHINE\SYSTEM\ControlSet001\services\LanmanServer\Parameters</registry>
        <regitem>NullSessionPipes</regitem>
        <standard></standard>
		<assessment>array</assessment>
		<valuetype>multistring</valuetype>
    </item>
